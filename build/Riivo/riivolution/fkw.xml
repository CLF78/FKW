<wiidisc version="1">
	<id game="RMC"/>
	<options>
		<section name="Formula Kart Wii">
			<option name="Formula Kart Wii">
				<choice name="Enabled">
					<patch id="fkw" />
				</choice>
			</option>
			<option name="Always Win Track Vote">
				<choice name="Enabled">
					<patch id="voting" />
				</choice>
			</option>
			<option name="CTGP My Stuff">
				<choice name="Enabled">
					<patch id="mystuff" />
				</choice>
			</option>
			<option name="Faster Menu Navigation">
				<choice name="Enabled">
					<patch id="fastmenu" />
				</choice>
			</option>
			<option name="Force Battle Glitch">
				<choice name="Enabled">
					<patch id="btglitch" />
				</choice>
			</option>
			<option name="Mii Heads on Minimap">
				<choice name="Enabled">
					<patch id="miiheads" />
				</choice>
			</option>
			<option name="No Character Sounds">
				<choice name="Enabled">
					<patch id="nochars" />
				</choice>
			</option>
			<option name="No Music">
				<choice name="Enabled">
					<patch id="nomusic" />
				</choice>
			</option>
		</section>
	</options>
	<patch id="fkw">
		<!--Load Code-->
		<memory valuefile="/fkw/Loader{$__region}.bin" offset="0x80258700"/>
		<memory offset="0x8000629C" value="48252FB0"/>
		<folder external="/fkw/codes" disc="/codes" create="true"/>
		<!--File Replacements-->
		<file disc="/Race/Common_U.szs" external="/fkw/Common_X/Common_E.szs" />
		<file disc="/Race/Common_Q.szs" external="/fkw/Common_X/Common_F.szs" />
		<file disc="/Race/Common_M.szs" external="/fkw/Common_X/Common_S.szs" />
		<folder disc="/Race" external="/fkw/Common_X" />
		<folder disc="/Race/Course" external="/fkw/TrackPatches" create="true" />
		<folder disc="/Scene/UI" external="/fkw/Race_X" />
		<file disc="/Scene/UI/Title.szs" external="/fkw/Title.szs" />
		<file disc="/Scene/UI/Race.szs" external="/fkw/Race.szs" />
		<file disc="/Scene/UI/Race_R.szs" external="/fkw/Race_R.szs" />
	</patch>
	<patch id="mystuff">
		<folder external="/ctgpr/My Stuff" recursive="false" />
		<folder external="/ctgpr/My Stuff" disc="/" />
	</patch>
	<!--Set bytes to enable the following codes-->
	<patch id="fastmenu">
		<memory offset="0x800016BB" value="01"/>
	</patch>
	<patch id="miiheads">
		<memory offset="0x800016BD" value="01"/>
	</patch>
	<patch id="nomusic">
		<memory offset="0x800016BF" value="01"/>
	</patch>
	<patch id="btglitch">
		<memory offset="0x800016C1" value="01"/>
	</patch>
	<patch id="nochars">
		<memory offset="0x800016C3" value="01"/>
	</patch>
	<patch id="voting">
		<memory offset="0x800016C5" value="01"/>
	</patch>
</wiidisc>