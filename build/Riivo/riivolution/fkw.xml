<wiidisc version="1">
	<id game="RMC"/>
	<options>
		<section name="Formula Kart Wii">
			<option name="Formula Kart Wii">
				<choice name="Enabled">
					<patch id="fkw" />
				</choice>
			</option>
			<option name="Faster Menu Navigation">
				<choice name="Enabled">
					<patch id="fastmenu" />
				</choice>
			</option>
			<option name="Force Battle Glitch">
				<choice name="Enabled">
					<patch id="btglitch" />
				</choice>
			</option>
			<option name="Mii Heads on Minimap">
				<choice name="Enabled">
					<patch id="miiheads" />
				</choice>
			</option>
			<option name="My Stuff">
				<choice name="CTGP">
					<patch id="mystuffctgp" />
				</choice>
				<choice name="CTGP (Music Only)">
					<patch id="mystuffctgpnrt" />
				</choice>
				<choice name="FKW">
					<patch id="mystufffkw" />
				</choice>
				<choice name="FKW (Music Only)">
					<patch id="mystufffkwnrt" />
				</choice>
			</option>
			<option name="No Character Voices">
				<choice name="Enabled">
					<patch id="nochars" />
				</choice>
			</option>
			<option name="No Music">
				<choice name="Enabled">
					<patch id="nomusic" />
				</choice>
			</option>
			<option name="Show Time Difference">
				<choice name="Player In Front">
					<patch id="timediff1" />
				</choice>
				<choice name="Player In 1st">
					<patch id="timediff2" />
				</choice>
			</option>
			<option name="Speedometer">
				<choice name="Enabled">
					<patch id="speedo" />
				</choice>
			</option>
		</section>
	</options>
	<patch id="fkw">
		<!--Load Code-->
		<memory valuefile="/fkw/Loader.bin" offset="0x80004010"/>
		<memory offset="0x8000629C" value="4BFFDF54"/>
		<folder external="/fkw/fkw" disc="/fkw" create="true"/>
		<!--File Replacements-->
		<folder disc="/Race" external="/fkw/Common_X" create="true" />
		<file disc="/Scene/UI/Race_M.szs" external="/fkw/Race_X/Race_S.szs" />
		<file disc="/Scene/UI/Race_Q.szs" external="/fkw/Race_X/Race_F.szs" />
		<file disc="/Scene/UI/Race_U.szs" external="/fkw/Race_X/Race_E.szs" />
		<folder disc="/Scene/UI" external="/fkw/Race_X" />
		<file disc="/Scene/UI/Title_F.szs" external="/fkw/Title_X/Title_E.szs" />
		<file disc="/Scene/UI/Title_G.szs" external="/fkw/Title_X/Title_E.szs" />
		<file disc="/Scene/UI/Title_I.szs" external="/fkw/Title_X/Title_E.szs" />
		<file disc="/Scene/UI/Title_S.szs" external="/fkw/Title_X/Title_E.szs" />
		<file disc="/Scene/UI/Title_M.szs" external="/fkw/Title_X/Title_E.szs" />
		<file disc="/Scene/UI/Title_Q.szs" external="/fkw/Title_X/Title_E.szs" />
		<file disc="/Scene/UI/Title_U.szs" external="/fkw/Title_X/Title_E.szs" />
		<folder disc="/Scene/UI" external="/fkw/Title_X" />
		<!--Track Patches -->
		<folder disc="/Race/Course" external="/fkw/TrackPatches" create="true" />
		<file disc="/Race/Course/boardcross_course_d_Dif.szs" external="/fkw/TrackPatches/boardcross_course_Dif.szs" create="true" />
		<file disc="/Race/Course/shopping_course_d_Dif.szs" external="/fkw/TrackPatches/shopping_course_Dif.szs" create="true" />
		<file disc="/Race/Course/old_falls_ds_d_Dif.szs" external="/fkw/TrackPatches/old_falls_ds_Dif.szs" create="true" />
	</patch>
	<patch id="mystuffctgp">
		<folder external="/ctgpr/My Stuff" recursive="false" />
		<folder external="/ctgpr/My Stuff" disc="/" />
	</patch>
	<patch id="mystuffctgpnrt">
		<folder external="/ctgpr/My Stuff" recursive="false" disc="/sound" />
		<folder external="/ctgpr/My Stuff" recursive="false" disc="/sound/strm" />
	</patch>
	<patch id="mystufffkw">
		<folder external="/fkw/My Stuff" recursive="false" />
		<folder external="/fkw/My Stuff" disc="/" />
	</patch>
	<patch id="mystufffkwnrt">
		<folder external="/fkw/My Stuff" recursive="false" disc="/sound" />
		<folder external="/fkw/My Stuff" recursive="false" disc="/sound/strm" />
	</patch>
	<!--Set bytes to enable the following codes-->
	<patch id="fastmenu">
		<memory offset="0x80004000" value="01"/>
	</patch>
	<patch id="miiheads">
		<memory offset="0x80004001" value="01"/>
	</patch>
	<patch id="nomusic">
		<memory offset="0x80004002" value="01"/>
	</patch>
	<patch id="nochars">
		<memory offset="0x80004003" value="01"/>
	</patch>
	<patch id="btglitch">
		<memory offset="0x80004004" value="01"/>
	</patch>
	<patch id="timediff1">
		<memory offset="0x80004005" value="01"/>
	</patch>
	<patch id="timediff2">
		<memory offset="0x80004005" value="02"/>
	</patch>
	<patch id="speedo">
		<memory offset="0x80004006" value="01"/>
	</patch>
</wiidisc>
